<UserControl
    x:Class="DefinitionEditor.Options.OptionsPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DefinitionEditor.Options">
    <StackPanel>
        <CheckBox Name="DisplayTypesCheckbox"
            Margin="4,9,4,4"
            Content="Display Field Types"
            ToolTip="Data type labels will be shown to the right of each value."
            IsChecked="{Binding DisplayFieldTypes, Mode=TwoWay}" />
        <CheckBox Name="DisplayOffsetsCheckbox"
            Margin="4,9,4,4"
            Content="Display Field Offsets"
            ToolTip="Shows the byte offset from the start of the struct for each field."
            IsChecked="{Binding DisplayFieldOffsets, Mode=TwoWay}" />
        <CheckBox Name="CollapseBlocksCheckbox"
            Margin="4,9,4,5"
            Content="Collapse Blocks By Default"
            ToolTip="On opening a new tag, its blocks (and child blocks within) are collapsed."
            IsChecked="{Binding CollapseBlocks, Mode=TwoWay}" />
    </StackPanel>
</UserControl>
